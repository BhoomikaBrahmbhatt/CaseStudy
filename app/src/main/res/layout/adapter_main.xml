<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_six_dp"
    android:background="@color/white"
    android:elevation="@dimen/dimen_eight_dp"
    app:cardCornerRadius="@dimen/dimen_eight_dp">

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_hero"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_hero_image"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_six_dp"
            android:paddingRight="@dimen/dimen_six_dp"
            android:paddingTop="@dimen/dimen_six_dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_teaser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_six_dp"
            android:paddingRight="@dimen/dimen_six_dp"
            android:paddingBottom="@dimen/dimen_six_dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>